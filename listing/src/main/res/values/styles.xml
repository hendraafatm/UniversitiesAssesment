<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:statusBarColor">@color/mainBackground</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="AppModalStyle" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Set parent theme as app theme. -->

    <style name="App_Titles">
        <item name="android:fontFamily">@font/caros_soft_bold</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/greyStrokeColor</item>
    </style>

    <style name="App_Sub_Titles">
        <item name="android:fontFamily">@font/caros_soft</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/dialog_background_color</item>
    </style>


    <dimen name="_30sp">30sp</dimen>
    <dimen name="_12sp">12sp</dimen>
    <dimen name="_20sp">20sp</dimen>
</resources>